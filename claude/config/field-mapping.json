      "Epic": "epic",
      "Task": "task",
      "Story": "task",
      "Bug": "task",
      "Improvement": "task"
    }
  },
  
  "custom_field_definitions": {
    "epic_fields": {
      "Progress": {
        "jira_key": "customfield_10010",
        "type": "number",
        "description": "Epic progress percentage (0-100)"
      },
      "PRD Link": {
        "jira_key": "customfield_10011", 
        "type": "url",
        "description": "Link to Product Requirements Document"
      },
      "GitHub Issue": {
        "jira_key": "customfield_10012",
        "type": "url",
        "description": "Link to GitHub issue"
      }
    },
    "task_fields": {
      "GitHub Issue": {
        "jira_key": "customfield_10012",
        "type": "url",
        "description": "Link to GitHub issue"
      },
      "Parallel Execution": {
        "jira_key": "customfield_10013",
        "type": "boolean", 
        "description": "Whether task can be executed in parallel"
      },
      "Conflicts With": {
        "jira_key": "customfield_10014",
        "type": "array",
        "description": "List of conflicting task IDs"
      }
    }
  },
  
  "field_validation": {
    "required_epic_fields": ["name", "status"],
    "required_task_fields": ["name", "status"],
    "date_format": "ISO8601",
    "url_validation": true,
    "status_validation": true
  },
  
  "transformation_rules": {
    "datetime": {
      "input_format": "ISO8601",
      "output_format": "JIRA_DATETIME"
    },
    "percentage": {
      "min_value": 0,
      "max_value": 100,
      "decimal_places": 0
    },
    "dependency_array": {
      "format": "task_id_array",
      "validation": "task_exists"
    }
  }
}